{
    "compilerOptions": {
        "target": "es2019",
        "module": "es2015",
        "useDefineForClassFields": false,
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "removeComments": true,
        "outDir": "lib",
        "baseUrl": "./src",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "lib": [
            "es2019", 
            "dom"
        ],
        "types": [
        ]
    },
    "include": [
        "src/**/*"
    ]
}